generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TrailItem {
  id        String   @unique  @db.VarChar(255)
  region    String   @db.VarChar(255)
  trailTitle String   @db.VarChar(255)
  difficulty String   @db.VarChar(255)
  time      Float
  rate      Float
  tripTime  Float
  elevationGain Float
  season    String    @db.VarChar(255)
  camping   Boolean
  publicTransit Boolean
  dogFriendly   Boolean
  wishItems WishItem[]
}


model WishItem {
  id         Int      @id @default(autoincrement())
  trail      TrailItem    @relation(fields: [trailId], references: [id])
  trailId    String   
  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int   
  memo       String?  @db.VarChar(255)
  createdAt  DateTime @default(now())
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  auth0Id      String   @unique @default("")
  name         String?
  wishlist     WishItem[]


}

